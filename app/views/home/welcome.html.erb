<head>
  <title>What's Happening in Space?</title>
  <style>canvas { width: 100%; height: 100% }</style>
</head>
<body>
  <h4>What's Happening in Space?</h4>
  <script src="https://rawgithub.com/mrdoob/three.js/master/build/three.js"></script>
  <script src='threex.domevents.js'></script>
  <script>
    var scene = new THREE.Scene();
    var camera = new THREE.PerspectiveCamera( 75, window.innerWidth / window.innerHeight, 0.1, 1000 );

    var renderer = new THREE.WebGLRenderer();
    renderer.setSize( window.innerWidth, window.innerHeight );
    document.body.appendChild( renderer.domElement );

    camera.position.z = 15;
    camera.position.y = 6;
    camera.rotation.x = -.7

    var sun = new THREE.Mesh( 
      new THREE.SphereGeometry(1,25,25),
      new THREE.MeshBasicMaterial( { 
        color: 0xffcc00 
      }));
    scene.add( sun );

    var earth = new THREE.Mesh( 
      new THREE.SphereGeometry(.3,15,15),
      new THREE.MeshBasicMaterial( { 
        color: 0x0077ff 
      }));
    scene.add( earth );

    earth.position.x = -0.99 * 10
    earth.position.y = -0.11 * 10
    earth.position.z = 0.00 * 10

    var mercury = new THREE.Mesh( 
      new THREE.SphereGeometry(.1,15,15),
      new THREE.MeshBasicMaterial( { 
        color: 0xff2222 
      }));
    scene.add( mercury );

    mercury.position.x = -0.22 * 10
    mercury.position.y = -0.40 * 10 
    mercury.position.z = -0.02 * 10

    // ThreeX click event library
    var domEvents   = new THREEx.DomEvents(camera, renderer.domElement)

    domEvents.addEventListener(earth, 'click', function(event){
        console.log('you clicked on the mesh')
    }, false)

    function render() {
        requestAnimationFrame(render);
        sun.rotation.x += 0.1;
        sun.rotation.y += 0.03;
        renderer.render(scene, camera);
      }

    render();
  </script>
</body>