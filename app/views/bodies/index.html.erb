
<style>canvas { width: 100%; height: 100% }</style>
<script>
var planets = [];

<% @bodies.each do |planet| %>
  var p = {
    name: "<%= planet.name.to_s %>",
    diameter: "<%= planet.diameter %>",
    color: "<%= planet.color.to_s %>",
    x: "<%= planet.x %>",
    y: "<%= planet.y %>",
    z: "<%= planet.z %>"
  };
  planets.push( p );
<% end %>
console.log(planets)
</script>
<h4>What's Happening in Space?</h4>
<% @bodies.each do |body| %>
  <div id="<%=body.name%>_info" class="modal">
  <p>This is <%= body.name.capitalize %>!</p>
  </div>
<% end %>